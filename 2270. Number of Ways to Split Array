// 2270. Number of Ways to Split Array

class Solution {
    public int waysToSplitArray(int[] nums) {
       int n=nums.length;
       long [] LS=new long[n];
       long [] RS=new long[n];
       int count=0;
       LS[0]=nums[0];
       for(int i=1; i<n; i++){
        LS[i]=LS[i-1]+nums[i];
       } 
       for(int i=n-2; i>=0; i--){
        RS[i]=RS[i+1]+nums[i+1];
       }
       for(int i=0; i<n-1; i++){
        if(LS[i]>=RS[i]){
            count++;
        }
       }
       return count;
    }
}
